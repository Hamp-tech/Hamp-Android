<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.75dp"
        android:background="@color/manatee_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/historyNavigationButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        android:src="@drawable/history_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="@id/guidelineLeft"
        app:layout_constraintRight_toLeftOf="@+id/serviceNavigationButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/serviceNavigationButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        android:src="@drawable/service_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/historyNavigationButton"
        app:layout_constraintRight_toLeftOf="@+id/profileNavigationButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profileNavigationButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        android:src="@drawable/profile_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/serviceNavigationButton"
        app:layout_constraintRight_toRightOf="@id/guidelineRight"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>