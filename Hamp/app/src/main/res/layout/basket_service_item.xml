<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <View
                android:id="@+id/stateServiceView"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/quantityValue"
                style="@style/Fredoka24.Black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/stateServiceView"
                android:layout_toRightOf="@+id/stateServiceView"
                android:padding="15dp"
                tools:text="2" />

            <TextView
                android:id="@+id/name"
                style="@style/HelveticaNeueMedium20.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/quantityValue"
                android:layout_toLeftOf="@+id/priceContainer"
                android:layout_toRightOf="@+id/quantityValue"
                android:layout_toStartOf="@+id/priceContainer"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="5dp"
                tools:text="Bolsa pequeña" />

            <LinearLayout
                android:id="@+id/priceContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/plusMinusContainer"
                android:layout_toStartOf="@+id/plusMinusContainer">

                <TextView
                    android:id="@+id/price"
                    style="@style/Fredoka18.CandyPink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="X" />

                <TextView
                    style="@style/Fredoka12.CandyPink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="€" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/plusMinusContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/plus"
                    style="@style/Fredoka20.CandyPink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="+" />

                <TextView
                    android:id="@+id/minus"
                    style="@style/Fredoka20.CandyPink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    tools:text="-" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>