<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_bg"
    tools:context="com.hamp.mvp.start.StartActivity">

    <!--<ImageView-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="0dp"-->
    <!--android:src="@drawable/start_bg"-->
    <!--app:layout_constraintBottom_toBottomOf="parent"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent" />-->

    <android.support.constraint.Guideline
        android:id="@+id/guidelineVertical10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineVertical08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineVertical90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineVertical92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <ImageView
        android:id="@+id/startBagIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/start_bag_icon_top_margin"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVertical10"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/five_bag_icon" />

    <TextView
        android:id="@+id/startMainText"
        style="@style/Fredoka30.Razzmatazz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_start_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVertical10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/startButton"
        style="@style/HelveticaNeueBold16.White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/start_button_top_margin"
        android:background="@drawable/hamp_default_button"
        android:paddingBottom="@dimen/start_button_padding_top_bottom"
        android:paddingTop="@dimen/start_button_padding_top_bottom"
        android:text="@string/start"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVertical08"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVertical92"
        app:layout_constraintTop_toBottomOf="@+id/startMainText" />

    <TextView
        android:id="@+id/alreadyHaveAccount"
        style="@style/HelveticaNeueRegular13.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/start_already_account_bottom_margin"
        android:paddingBottom="@dimen/start_login_top_bottom_padding"
        android:paddingTop="@dimen/start_login_top_bottom_padding"
        android:text="@string/already_have_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVertical10" />

    <TextView
        android:id="@+id/login"
        style="@style/HelveticaNeueMedium13.Razzmatazz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/start_login_left_margin"
        android:layout_marginStart="@dimen/start_login_left_margin"
        android:paddingBottom="@dimen/start_login_top_bottom_padding"
        android:paddingTop="@dimen/start_login_top_bottom_padding"
        android:text="@string/start_login"
        app:layout_constraintBottom_toBottomOf="@+id/alreadyHaveAccount"
        app:layout_constraintLeft_toRightOf="@+id/alreadyHaveAccount"
        app:layout_constraintTop_toTopOf="@+id/alreadyHaveAccount" />

</android.support.constraint.ConstraintLayout>
