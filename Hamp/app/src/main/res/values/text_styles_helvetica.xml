<resources>

    <!-- HelveticaNeue fonts -->
    <style name="HelveticaNeueRegular">
        <item name="fontPath">fonts/HelveticaNeue-Regular.ttf</item>
    </style>

    <style name="HelveticaNeueBold">
        <item name="fontPath">fonts/HelveticaNeue-Bold.ttf</item>
    </style>

    <style name="HelveticaNeueLight">
        <item name="fontPath">fonts/HelveticaNeue-Light.ttf</item>
    </style>

    <style name="HelveticaNeueMedium">
        <item name="fontPath">fonts/HelveticaNeue-Medium.ttf</item>
    </style>

    <style name="HelveticaNeueThin">
        <item name="fontPath">fonts/HelveticaNeue-Thin.ttf</item>
    </style>

    <!-- HelveticaNeue sizes -->
    <style name="HelveticaNeueRegular13" parent="HelveticaNeueRegular">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HelveticaNeueRegular17" parent="HelveticaNeueRegular">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="HelveticaNeueBold16" parent="HelveticaNeueBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HelveticaNeueBold28" parent="HelveticaNeueBold">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="HelveticaNeueMedium13" parent="HelveticaNeueMedium">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HelveticaNeueMedium20" parent="HelveticaNeueMedium">
        <item name="android:textSize">20sp</item>
    </style>


    <!-- HelveticaNeue colors-->
    <style name="HelveticaNeueRegular13.Black" parent="HelveticaNeueRegular13">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HelveticaNeueRegular13.White" parent="HelveticaNeueRegular13">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="HelveticaNeueRegular13.Razzmatazz" parent="HelveticaNeueRegular13">
        <item name="android:textColor">@color/razzmatazz</item>
    </style>

    <style name="HelveticaNeueRegular17.Razzmatazz" parent="HelveticaNeueRegular17">
        <item name="android:textColor">@color/razzmatazz</item>
    </style>


    <style name="HelveticaNeueBold16.White" parent="HelveticaNeueBold16">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HelveticaNeueBold28.Black" parent="HelveticaNeueBold28">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HelveticaNeueMedium13.Razzmatazz" parent="HelveticaNeueMedium13">
        <item name="android:textColor">@color/razzmatazz</item>
    </style>

    <style name="HelveticaNeueMedium20.Black" parent="HelveticaNeueMedium20">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HelveticaNeueMedium20.CerisePink" parent="HelveticaNeueMedium20">
        <item name="android:textColor">@color/cerise_pink</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

</resources>
