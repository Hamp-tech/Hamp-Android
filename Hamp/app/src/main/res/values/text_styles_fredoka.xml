<resources>

    <!-- FredokaOneRegular font -->
    <style name="Fredoka">
        <item name="fontPath">fonts/FredokaOne-Regular.ttf</item>
    </style>

    <!-- FredokaOneRegular sizes -->
    <style name="Fredoka10" parent="Fredoka">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Fredoka20" parent="Fredoka">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Fredoka24" parent="Fredoka">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Fredoka26" parent="Fredoka">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Fredoka30" parent="Fredoka">
        <item name="android:textSize">30sp</item>
    </style>

    <!-- FredokaOneRegular colors-->
    <style name="Fredoka10.White" parent="Fredoka10">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Fredoka20.LightCoral" parent="Fredoka20">
        <item name="android:textColor">@color/lightcoral</item>
    </style>

    <style name="Fredoka24.Wenge" parent="Fredoka24">
        <item name="android:textColor">@color/wenge</item>
    </style>

    <style name="Fredoka26.Wenge" parent="Fredoka26">
        <item name="android:textColor">@color/wenge</item>
    </style>

    <style name="Fredoka30.Razzmatazz" parent="Fredoka30">
        <item name="android:textColor">@color/razzmatazz</item>
    </style>

    <style name="Fredoka30.CandyPink" parent="Fredoka30">
        <item name="android:textColor">@color/candy_pink</item>
    </style>

</resources>
